<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:stream="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:backgroundTint="@color/black_color">

    <FrameLayout
        android:id="@+id/video_surface_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="25"
        android:foregroundGravity="clip_horizontal|clip_vertical"
        tools:ignore="true">

        <ViewStub
            android:id="@+id/surface_stub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout="@layout/texture_view" />

<!--        <ViewStub-->
<!--            android:id="@+id/subtitles_surface_stub"-->
<!--            android:layout_width="1dp"-->
<!--            android:layout_height="1dp"-->
<!--            android:layout="@layout/surface_view" />-->

<!--        <ViewStub-->
<!--            android:id="@+id/texture_stub"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout="@layout/texture_view" />-->


        <com.eyalbira.loadingdots.LoadingDots
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:LoadingDots_auto_play="true"
            app:LoadingDots_dots_color="@android:color/white"
            app:LoadingDots_dots_count="4"
            app:LoadingDots_dots_size="10dp"
            app:LoadingDots_dots_space="1dp"
            app:LoadingDots_loop_duration="800"
            app:LoadingDots_loop_start_delay="100"
            app:LoadingDots_jump_duration="200"
            app:LoadingDots_jump_height="4dp"/>
    </FrameLayout>
    <TextView
        android:id="@+id/tv_cam_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="4dp"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="16dp"
        tools:text="@string/name" />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/error_occurred"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone" />
    <LinearLayout
        android:id="@+id/ll_record_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="@color/primary_dark_color"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_record_indicator"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="4dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_circle_24"
            android:layout_centerVertical="true"
            app:tint="@android:color/holo_red_dark"
            />
        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="00:00:00"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop"
            android:textSize="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/primary_dark_color"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
</layout>