<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="@color/black_color"
        app:cardCornerRadius="10dp"
        app:layout_constraintDimensionRatio="H,1200:550"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <SurfaceView
            android:id="@+id/hik_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:vlc_enable_volume_control="false"
            app:vlc_error_text_size="15dp" />
                <TextureView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
<!--                <com.alexvas.rtsp.widget.RtspSurfaceView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:id="@+id/svVideo" />-->
<!---->
        <TextView
            android:id="@+id/tv_cam_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="top|start"
            android:background="@drawable/overlay_gradient"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:textColor="@color/white"
            android:textSize="24dp"
            tools:text="@string/name" />


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
