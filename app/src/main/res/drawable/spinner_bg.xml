<?xml version="1.0"
    encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90"
                        android:endColor="#ffffff"
                        android:startColor="#ffffff"
                        android:type="linear" />
                    <solid android:color="@color/transparent_color"/>

                    <stroke android:width="1dp"
                        android:color="#504a4b" />

                    <corners android:radius="5dp" />

                    <padding android:bottom="3dp"
                        android:start= "3dp"
                        android:end="3dp"
                        android:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="end"
                    android:src="@drawable/arrow_own_sign_to_navigate" />
                // you can use any other image here, instead of default_holo_dark_am
            </item>
        </layer-list>
    </item>
</selector>