<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="mainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Disable animations between activities -->
        <!-- Primary brand color. -->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@color/default_bg</item>
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="actionModeBackground">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_color</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey_color</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorHint">@color/light_grey_color</item>
        <item name="android:colorBackground">@color/white_color</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textColorPrimaryInverse">@color/white_color</item>
    </style>

<!--    <style name="Theme.App.Starting" parent="Theme.SplashScreen">-->
