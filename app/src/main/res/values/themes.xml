<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
        <style name="mainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Disable animations between activities -->
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/default_bg</item>
        <item name="colorPrimary">@color/white</item>

        <item name="colorOnPrimary">@color/white_color</item>

        <item name="navigationIcon">@drawable/ic_baseline_arrow_back_ios_new_24</item>
        <item name="homeAsUpIndicator">@drawable/ic_baseline_arrow_back_ios_new_24</item>
        <item name="titleCentered">true</item>

        <item name="android:statusBarColor">@color/black</item>
        <item name="android:colorPrimaryDark">@color/black_color</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <!-- Secondary brand color. -->
        <item name="android:textColorPrimary">@color/black_color</item>
        <item name="android:textColorSecondary">@color/black_color</item>
        <item name="android:textColorHint">@color/light_grey_color</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>

            <!-- action mode  -->
            <item name="actionModeStyle">@style/ActionModeStyle</item>
            <item name="android:actionMenuTextColor">@color/white_color</item>
            <item name="actionModeBackground">@color/primary_color</item>
            <item name="android:actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
            <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="NavigationTheme" parent="mainTheme">
        <item name="listPreferredItemHeightSmall">80dp</item><!-- menu item height- vary as u need -->
        <item name="android:listDivider">@color/black</item>
    </style>

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:actionModeShareDrawable">@drawable/custom_share_icon</item>
        <item name="titleTextStyle">@style/ActionModeTitleStyle</item>
    </style>

    <style name="ActionModeTitleStyle">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">20dp</item>
    </style>


    <style name="homeTheme" parent="@style/mainTheme">
        <item name="navigationIcon">@drawable/ic_baseline_menu_24</item>

    </style>

<!--    <style name="Theme.App.Starting" parent="Theme.SplashScreen">-->
